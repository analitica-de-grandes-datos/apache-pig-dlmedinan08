persons = LOAD 'data.csv' USING PigStorage(',') 
        AS (f1:INT,
        f2:CHARARRAY,  
        f3:CHARARRAY,
        f4:CHARARRAY,
        f5:CHARARRAY);

dates = FOREACH persons GENERATE ToDate(f4, 'yyyy-MM-dd') AS birthday;

dates_2 = FOREACH dates GENERATE GetYear(birthday), ToString(birthday, 'yy');

